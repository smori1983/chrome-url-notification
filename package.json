{
  "name": "chrome-url-notification",
  "version": "6.1.0",
  "description": "Chrome URL Notification",
  "directories": {},
  "scripts": {
    "license:summary": "license-checker --production --summary --unknown",
    "build:prod": "cross-env EXTENSION_MODE=production gulp build",
    "build:dev": "cross-env EXTENSION_MODE=development gulp build",
    "make": "gulp make",
    "test": "mocha --require mock-local-storage test/*",
    "test:coverage": "istanbul cover --print both _mocha -- test/* --require mock-local-storage",
    "watch:build:dev": "watch 'npm run build:dev' src/ --interval=1 --ignoreDotFiles",
    "watch:test": "watch 'npm run test' src/ test/ test_lib/ --interval=1 --ignoreDotFiles",
    "lint": "gulp lint",
    "report:coverage": "istanbul cover _mocha -- test/* --require mock-local-storage && codecov"
  },
  "dependencies": {
    "bootstrap": "^3.4.1",
    "bootstrap-colorpicker": "^2.5.3",
    "clipboard": "^2.0.8",
    "deepmerge": "^4.2.2",
    "jquery": "^3.6.0",
    "jquery-validation": "^1.19.3",
    "jsonschema": "^1.4.0",
    "lodash": "^4.17.21",
    "sprintf-js": "^1.1.2"
  },
  "devDependencies": {
    "@babel/core": "^7.13.16",
    "@babel/preset-env": "^7.13.15",
    "@types/chrome": "0.0.135",
    "@types/jquery": "^3.5.5",
    "@types/node": "^12.12.38",
    "babel-loader": "^8.2.2",
    "babel-plugin-syntax-dynamic-import": "^6.18.0",
    "codecov": "^3.8.1",
    "color-js": "^1.0.5",
    "copy-webpack-plugin": "^8.1.1",
    "css-loader": "^5.2.4",
    "istanbul": "^0.4.5",
    "jsdom": "^16.5.3",
    "license-checker": "^25.0.1",
    "mocha": "^8.3.2",
    "mocha-testdata": "^1.2.0",
    "mock-local-storage": "^1.1.17",
    "sinon-chrome": "^3.0.1",
    "style-loader": "^2.0.0",
    "watch": "^1.0.2",
    "webpack": "^5.35.1",
    "webpack-cli": "^4.6.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/smori1983/chrome-url-notification.git"
  },
  "author": "Shinichiro MORI",
  "license": "MIT"
}
